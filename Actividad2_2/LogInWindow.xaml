<Window x:Class="Actividad2_2.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogInWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Usuario:" HorizontalAlignment="Left" Margin="42,47,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña:" HorizontalAlignment="Left" Margin="42,78,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbUser" HorizontalAlignment="Left" Height="23" Margin="135,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="pbPass" HorizontalAlignment="Left" Margin="135,80,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="buttonOk" Content="Aceptar" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="75" Click="buttonOk_Click"/>
    </Grid>
</Window>
