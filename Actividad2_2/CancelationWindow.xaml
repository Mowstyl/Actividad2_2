<Window x:Class="Actividad2_2.CancelationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CancelationWindow" Height="210" Width="210" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="¿Temporada alta?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
            <StackPanel Margin="0,0,0,0">
                <RadioButton Name="rbNo" Content="No" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top"/>
                <RadioButton Name="rbYes" Content="Sí" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>
        <Label Content="Precio cancelación" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="122,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" IsEnabled="False"/>
        <Button Name="bCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="75" Click="bCancel_Click"/>
        <Button Name="bAccept" Content="Aceptar" HorizontalAlignment="Left" Margin="109,140,0,0" VerticalAlignment="Top" Width="75" Click="bAccept_Click"/>
    </Grid>
</Window>
