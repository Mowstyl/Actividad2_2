<Window x:Class="Actividad2_2.WorkerList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WorkerList" Height="350" Width="300">
    <Grid>
        <ListBox Name="lbJob" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="129" SelectionChanged="lbJob_SelectionChanged"/>
        <ListBox Name="lbWorker" HorizontalAlignment="Right" Height="200" Margin="0,10,10,0" VerticalAlignment="Top" Width="129" SelectionChanged="lbWorker_SelectionChanged"/>
        <Button Name="bNew" Content="Nuevo" HorizontalAlignment="Left" Margin="50,0,0,15" VerticalAlignment="Bottom" Width="75" Click="bNew_Click"/>
        <Button Name="bOpen" Content="Abrir" HorizontalAlignment="Right" Margin="0,0,50,15" VerticalAlignment="Bottom" Width="75" Click="bOpen_Click" IsEnabled="False"/>
        <Button Name="bStop" Content="Dar Baja" HorizontalAlignment="Left" Margin="50,239,0,0" VerticalAlignment="Top" Width="75" Click="bStop_Click" IsEnabled="False"/>
        <Button Name="bStart" Content="Dar Alta" HorizontalAlignment="Left" Margin="167,239,0,0" VerticalAlignment="Top" Width="75" Click="bStart_Click" IsEnabled="False"/>

    </Grid>
</Window>
